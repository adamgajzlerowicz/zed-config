{
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/*yarn*",
    "packages/med-pro",
    "packages/mobile",
    "packages/nosework",
    "packages/home",
    "packages/infra",
    "packages/agitest",
    "packages/hoopers",
    // "packages/zawody",
    "packages/socket"
  ],
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "agent": {
    "notify_when_agent_waiting": "never",
    "default_profile": "write",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "buffer_font_size": 14,
  "show_completions_on_input": false,
  "fast_scroll_sensitivity": 0,
  "ui_font_size": 12,
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "JetBrains Mono",
  "vim_mode": true,
  "autosave": "on_focus_change",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "JavaScript": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "Astro": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "JSON": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    }
  },
  "current_line_highlight": "gutter",
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "tab_bar": {
    "show": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "vim": {
    "use_system_clipboard": "never"
  },
  "edit_predictions": {
    "disabled_globs": [".env"]
  },
  "outline_panel": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": false
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": true
    },
    "dock": "bottom"
  },
  "minimap": {
    "show": "never"
  },
  "format_on_save": "on",
  "theme": {
    "mode": "dark",
    "dark": "Ayu Mirage",
    "light": "Fleet Light"
  }
}
