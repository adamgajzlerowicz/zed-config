{
  "icon_theme": "Serendipity Icons",
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/*yarn*",
    "packages/zawody/server.js"
    // "packages/med-pro*",
    // "packages/mobile",
    // "packages/zawody",
    // "packages/store",
    // "packages/nosework",
    // "packages/home",
    // "packages/infra",
    // "packages/agitest",
    // "packages/hoopers",
    // "packages/fds",
    // "packages/socket"
  ],

  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "agent_font_size": 13,
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "enabled": true,
    "notify_when_agent_waiting": "never",
    "default_profile": "write",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true
  },
  "language_models": {
    "ollama": {
      // "api_url": "http://192.168.0.118:11434",
      "available_models": [
        {
          "name": "devstral-8k",
          "display_name": "local",
          "max_tokens": 32768,
          "supports_tools": true
        }
        // {
        //   "name": "llama3.1:8b",
        //   "display_name": "Local Llama 3.1 8B",
        //   "max_tokens": 128000,
        //   "supports_tools": true
        // },
        // {
        //   "name": "mistral-nemo",
        //   "display_name": "Local Mistral Nemo 12B",
        //   "max_tokens": 128000,
        //   "supports_tools": true
        // },
        // {
        //   "name": "hhao/qwen2.5-coder-tools:3b",
        //   "display_name": "Local Qwen 2.5 Coder Tools 3B",
        //   "max_tokens": 32768,
        //   "supports_tools": true
        // },
        // {
        //   "name": "nchapman/ministral-8b-instruct-2410",
        //   "display_name": "Local Mistral 8B Instruct 2410",
        //   "max_tokens": 128000,
        //   "supports_tools": true
        // }
      ]
    }
  },
  "buffer_font_size": 14,
  "inline_code_actions": false,
  "show_completions_on_input": true,
  "show_edit_predictions": false,
  "fast_scroll_sensitivity": 0,
  "ui_font_size": 12,
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "JetBrains Mono",
  "vim_mode": true,
  "autosave": "on_focus_change",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "JavaScript": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "Astro": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    },
    "JSON": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    }
  },
  "current_line_highlight": "gutter",
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "tab_bar": {
    "show": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "vim": {
    "use_system_clipboard": "never"
  },
  "edit_predictions": {
    "disabled_globs": [".env"]
  },
  "outline_panel": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": false
  },
  "terminal": {
    "keep_selection_on_copy": false,
    "toolbar": {
      "breadcrumbs": false
    },
    "dock": "bottom",
    "font_size": 12
  },
  "minimap": {
    "show": "never"
  },
  "format_on_save": "on",
  "theme": {
    "mode": "dark",
    "dark": "Zen Dark",
    "light": "Fleet Light"
  },
  "remove_trailing_whitespace_on_save": true
}
