[
  {
    "bindings": {
      "cmd-y": ["task::Spawn", { "task_name": "git commit-push" }],
      "cmd-=": ["task::Spawn", { "task_name": "switch-theme" }],
      "cmd-b": "git::Blame",
      "shift-tab": "workspace::ToggleLeftDock",
      "cmd-g": "workspace::ToggleRightDock",
      "cmd-shift-c": "workspace::ToggleBottomDock",
      "cmd-r": "project_panel::ToggleFocus",
      "cmd-j cmd-j": "project_panel::ToggleFocus",
      "cmd-t": "terminal_panel::ToggleFocus",
      "cmd-o": "outline::Toggle",
      "cmd-j l": "workspace::ToggleLeftDock",
      "cmd-j r": "workspace::ToggleRightDock",
      "cmd-j b": "workspace::ToggleBottomDock",
      "cmd-k": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-e": "editor::Rename",
      "cmd-w": "editor::SelectLargerSyntaxNode",
      "cmd-shift-w": "editor::SelectSmallerSyntaxNode",
      "cmd-enter": "editor::ToggleCodeActions",
      "ctrl-s": "workspace::SaveAll",
      "cmd-l": "editor::Format",
      "alt-enter": "assistant::InlineAssist"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "g e": "project_panel::Rename"
    }
  },
  {
    "context": "Editor && vim_mode == normal && (vim_operator == none || vim_operator == n) && !VimWaiting",
    "bindings": {
      "g d": "editor::GoToDefinition",
      "g u": "editor::FindAllReferences",
      "cmd-u": "editor::FindAllReferences",
      "[ d": "editor::GoToPreviousDiagnostic",
      "] d": "editor::GoToDiagnostic",
      "g r": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal",
      "cmd-l": "terminal::Clear"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-w": "pane::CloseActiveItem"
    }
  }
]
