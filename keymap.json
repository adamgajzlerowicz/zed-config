[
  {
    "bindings": {
      "shift-tab": "workspace::ToggleLeftDock",
      "cmd-shift-c": "workspace::ToggleRightDock",
      "cmd-r": "project_panel::ToggleFocus",
      "alt-p": ["task::Spawn", { "task_name": "git commit-push" }],
      "cmd-j cmd-j": "workspace::ToggleCenteredLayout",
      "cmd-o": "projects::OpenRecent",
      "cmd-j l": "workspace::ToggleLeftDock",
      "cmd-j r": "workspace::ToggleRightDock",
      "cmd-j b": "workspace::ToggleBottomDock",
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-e": "editor::Rename",
      "cmd-w": "editor::SelectLargerSyntaxNode",
      "cmd-shift-w": "editor::SelectSmallerSyntaxNode",
      "g enter": "editor::ToggleCodeActions",
      "ctrl+s": "workspace::SaveAll"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "g e": "project_panel::Rename"
    }
  },
  {
    "context": "Editor && vim_mode == normal && (vim_operator == none || vim_operator == n) && !VimWaiting",
    "bindings": {
      "g d": "editor::GoToDefinition",
      "g u": "editor::FindAllReferences",
      "[ d": "editor::GoToPrevDiagnostic",
      "] d": "editor::GoToDiagnostic",
      "g r": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal",
      "cmd-l": "terminal::Clear"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-w": "pane::CloseActiveItem"
    }
  }
]
