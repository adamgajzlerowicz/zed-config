  // "buffer_font_size": 14,
  "inline_code_actions": false,
  "show_completions_on_input": true,
  "show_edit_predictions": false,
  "fast_scroll_sensitivity": 0,
  // "ui_font_size": 16,
  "buffer_font_features": {
    "calt": true
  },
  "vim_mode": true,
  "autosave": "on_focus_change",
  "features": {
    "edit_prediction_provider": null
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "env": {
          "GOROOT": "/Users/adam/.gvm/gos/go1.25.0",
          "GOPATH": "/Users/adam/.gvm/pkgsets/go1.25.0/global",
          "GO111MODULE": "on"
        }
      }
    }
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls"],
      "format_on_save": "on"
    },
    "JavaScript": {
      "formatter": ["prettier"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.addMissingImports": true,
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "formatter": ["prettier"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.addMissingImports": true,
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "formatter": ["prettier"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.addMissingImports": true,
        "source.fixAll.eslint": true
      }
    },
    "JSON": {
      "formatter": ["prettier"],
      "format_on_save": "on"
    }
  },
  "current_line_highlight": "gutter",
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "tab_bar": {
    "show": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "vim": {
    "use_system_clipboard": "never"
  },
  "edit_predictions": {
    "disabled_globs": [".env"]
  },
  "outline_panel": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": false
  },
  "terminal": {
    "keep_selection_on_copy": false,
    "toolbar": {
      "breadcrumbs": false
    },
    "dock": "bottom"
    // "font_size": 16
  },
  "minimap": {
    "show": "never"
  },
  "format_on_save": "on",
  "theme": {
    "mode": "dark",
    "dark": "Zen Dark",
    "light": "Zen Light"
  },
  "remove_trailing_whitespace_on_save": true
}
